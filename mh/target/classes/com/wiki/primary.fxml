<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox style="-fx-background-color: lightgray;" alignment="CENTER" padding="$10" BorderPane.alignment="CENTER">
         <children>
            <Label text="Nombre Específico del Header" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <content>
            <VBox fx:id="datosContainer" spacing="10" padding="$10">
               <HBox style="-fx-background-color: white; -fx-border-color: gray; -fx-border-width: 1px; -fx-padding: 10px;" spacing="10">
                  <Label text="Dato 1:" style="-fx-font-weight: bold;"/>
                  <Label text="Valor Corto del Dato 1" fx:id="dato1Corto"/>
                  <Button text="Ver Detalles" onAction="#mostrarDetallesDato1"/>
               </HBox>
               <VBox fx:id="detallesDato1" visible="false" spacing="5" style="-fx-padding: 10px; -fx-background-color: lightyellow; -fx-border-color: orange; -fx-border-width: 1px;">
                  <Label text="Detalles Completos del Dato 1:" style="-fx-font-weight: bold;"/>
                  <Label text="Aquí se mostrarán todos los detalles del Dato 1." fx:id="dato1Completo"/>
               </VBox>
               <HBox style="-fx-background-color: white; -fx-border-color: gray; -fx-border-width: 1px; -fx-padding: 10px;" spacing="10">
                  <Label text="Dato 2:" style="-fx-font-weight: bold;"/>
                  <Label text="Valor Corto del Dato 2" fx:id="dato2Corto"/>
                  <Button text="Ver Detalles" onAction="#mostrarDetallesDato2"/>
               </HBox>
               <VBox fx:id="detallesDato2" visible="false" spacing="5" style="-fx-padding: 10px; -fx-background-color: lightyellow; -fx-border-color: orange; -fx-border-width: 1px;">
                  <Label text="Detalles Completos del Dato 2:" style="-fx-font-weight: bold;"/>
                  <Label text="Aquí se mostrarán todos los detalles del Dato 2." fx:id="dato2Completo"/>
               </VBox>
               </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
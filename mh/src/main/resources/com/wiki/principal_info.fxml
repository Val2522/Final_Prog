<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wiki.infoController" spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <!-- Logo de Monster Hunter -->
    <ImageView fitWidth="400" preserveRatio="true">
        <image>
            <Image url="@icons/monster_hunter_logo.png" />
        </image>
    </ImageView>

    <!-- GIF animado -->
    <ImageView fitWidth="300" preserveRatio="true">
        <image>
            <Image url="@icons/palico.gif" />
        </image>
    </ImageView>

    <!-- Título -->
    <Label text="Monster Hunter Wiki" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Descripción -->
    <Label text="Monster Hunter es una serie de videojuegos de rol de acción desarrollada y publicada por Capcom. En estos juegos, los jugadores asumen el papel de cazadores que enfrentan monstruos gigantes en un mundo lleno de vida y desafíos. La saga es conocida por su jugabilidad cooperativa, su sistema de combate profundo y su énfasis en la estrategia y la preparación." 
           wrapText="true" style="-fx-font-size: 16px; -fx-text-alignment: justify;" maxWidth="600" />

    <!-- Información adicional -->
    <Label text="Desde su lanzamiento en 2004, Monster Hunter ha crecido hasta convertirse en una de las franquicias más exitosas de Capcom, con millones de copias vendidas en todo el mundo. Los jugadores pueden cazar solos o en equipo, recolectar materiales y crear armas y armaduras únicas para enfrentarse a desafíos aún mayores." 
           wrapText="true" style="-fx-font-size: 14px; -fx-text-alignment: justify;" maxWidth="600" />

    <!-- Botón para regresar -->
    <Button text="Regresar" onAction="#volverAVistaPrincipal" style="-fx-font-size: 14px; -fx-padding: 10;" />
</VBox>